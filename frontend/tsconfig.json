{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "jsx": "react-jsx",               // ✅ JSX構文をReact 18向けにする
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "noImplicitAny": false, 
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
      
    },
    "include": ["src"]
  }
  